@model Vinabook.Models.NguoiDung
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link rel="stylesheet" href="/assets/css/register.css">
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <div class="frame">


        <div class="container">
            <div class="register">
                <div class="grid">
                    <div class="breadcrumb">
                        <ul class="breadcrumb__list" style="margin-bottom: 0;">
                            <li class="breadcrumb__item">
                                <a href="">
                                    Trang chủ
                                </a>
                            </li>
                            <li class="breadcrumb__item">
                                <a href="">
                                    <i class="bi bi-chevron-right"></i>
                                    Tạo tài khoản mới
                                </a>
                            </li>
                        </ul>
                    </div>
                    <h2 class="register__title">Chưa có tài khoản? Đăng ký ngay</h2>
                    <div class="register-left grid__row">
                        <div class="grid__colunm-7" style="padding-right: 0;">
                            <div class="register__body">
                                <h2 class="register__body-title">ĐỔI MẬT KHẨU</h2>
                                <form asp-controller="NguoiDung" asp-action="DoiMatKhau">
                                    <table>
                                        
                                        <tr>
                                            <td>
                                                <label for="" class="important-info">Nhập mật khẩu cũ</label>
                                            </td>
                                            <td>
                                                <input type="text" name="matkhaucu" class="form-control register__body-input" style="margin-left:10px" />
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <label for="" class="important-info">Nhập mật khẩu mới</label>
                                            </td>
                                            <td>
                                                <input type="text" name="matkhaumoi" class="form-control register__body-input" style="margin-left:10px" />
                                            </td>
                                        </tr>

                                        <tr>
                                            <td></td>
                                            <td>
                                                <button class="login-btn" style="margin-left:10px">
                                                    ĐỔI MẬT KHẨU
                                                </button>
                                            </td>
                                        </tr>
                                    </table>
                                </form>


                            </div>
                        </div>
                        <div class="register-right grid__colunm-4">
                            <div class="register-others">
                                <span class="register-other__title">Đăng nhập bằng tài khoản khác</span>
                                <a href="#" class="register-other__google">
                                    <img src="/assets/img/google_signin_dark.png" alt="">
                                </a>
                                <a href="#" class="register-other__facebook">
                                    <img src="/assets/img/facebook_signin_dark.png" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="/assets/js/register.js"></script>
    <script src="/assets/js/main.js"></script>
</body>
</html>