@model IEnumerable<Vinabook.Models.NguoiDung>

@{
    ViewData["Title"] = "Index";
    @if (User.Identity.IsAuthenticated && (User.IsInRole("Quản lý")))
    {
        Layout = "_QuanLy";
    }
    else
    {
        Layout = "_Sach";
    }
}

<h1>Quản Lý Người Dùng</h1>

<p>
    <a asp-action="Create">Thêm mới người dùng</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VaiTro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaiTro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNguoiDung">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaNguoiDung">Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNguoiDung">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
