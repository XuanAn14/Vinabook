@model IEnumerable<GioHang.DongGioHang>
@{
    Layout = "_GioHang";
}
@foreach (var item in Model)
{
    <div class="product-wrapper">
        <img src="@item.URLAnh" alt="" class="product-img">
        <div class="product-name">
            <div class="product-info">
                <div class="product-left">
                    <p>@item.Ten</p>
                    <a class="btn-decrease" asp-action="GiamSoLuong" asp-controller="GioHang" asp-route-id="@item.MaSach">
                        <button>-</button>
                    </a>
                    <span class="product-num">@item.SoLuong</span>
                    <a class="btn-increase btn--active" asp-action="ThemVaoGio" asp-controller="GioHang" asp-route-id="@item.MaSach">
                        <button>+</button>
                    </a>
                </div>
                <div class="product-right">
                    @item.SoLuong x
                    <span>@item.ThanhTien</span>
                    <a asp-action="XoaKhoiGio" asp-controller="GioHang" asp-route-id="@item.MaSach">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

}