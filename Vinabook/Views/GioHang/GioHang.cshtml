@model GioHang
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng</title>
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/cart.css">
</head>
<body>
    <div class="frame">

        <div class="container">
            <div class="grid">
                <h3 class="main-tilte">giỏ hàng</h3>
                <div class="grid__row">
                    <div class="grid__colunm-8">
                        <div class="product">
                            <h3 class="product-title">Sản Phẩm</h3>
                            @foreach (var Dong in Model?.DongGioHang)
                            {
                                <div class="product-wrapper">
                                    <img src="@Dong.Sach.URLAnh" alt="" class="product-img">
                                    <div class="product-name">
                                        <div class="product-info">
                                            <div class="product-left">
                                                <p>@Dong.Sach.Ten</p>
                                                <button class="btn-decrease">-</button>
                                                <span class="product-num">@Dong.Sach.SoLuong</span>
                                                <button class="btn-increase btn--active">+</button>
                                            </div>
                                            <div class="product-right">
                                                <span> @Dong.Sach.SoLuong đ</span>
                                                <span> @Dong.Sach.Gia đ</span>
                                                <i class="bi bi-trash"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            }
                        </div>
                    </div>

                    <div class="grid__colunm-4">
                        <div class="bill">
                            <h3 class="bill-title">tóm tắt đơn hàng</h3>
                            <table class="bill-table">
                                <tr>
                                    <td>Sản phẩm</td>
                                    <td class="bill-table__right">1</td>
                                </tr>
                                <tr>
                                    <td>Phí vận chuyển</td>
                                    <td class="bill-table__right">Miễn phí</td>
                                </tr>
                                <tr>
                                    <td><b>TẠM TÍNH</b></td>
                                    <td class="bill-table__right"><span class="bill-price">128.000đ</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="padding-top: 20px;" class="bill-table__right">(Đã bao gồm Thuế VAT và Phí đóng gói cơ bản).</td>
                                </tr>
                                <tr>
                                    <td colspan="2"><hr></td>
                                </tr>
                                <tr>
                                    <td><b>TỔNG CỘNG</b></td>
                                    <td class="bill-table__right"><b>128.000 đ</b></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="cart-btn">
                    <a href="/assets/index.html" class="cart-bt__back">Quay lại</a>
                    <a href="#" class="cart-bt__pay">Thanh toán</a>
                </div>
            </div>
        </div>

    </div>
</body>
</html>