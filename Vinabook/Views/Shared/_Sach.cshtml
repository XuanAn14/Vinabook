<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KhoSach</title>
    <link rel="stylesheet" href="/assets/css/base.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/responsive.css">
    <link rel="stylesheet" href="/assets/css/category.css">
</head>



<body>
    <div class="frame">

        @await Component.InvokeAsync("Header")
        <div class="container">
            <div class="grid">
                <div class="breadcrumb">
                    <ul class="breadcrumb__list">
                        <li class="breadcrumb__item">
                            <a href="">
                                Trang chủ
                            </a>
                        </li>
                        <li class="breadcrumb__item">
                            <a href="">
                                <i class="bi bi-chevron-right"></i>
                                Sách Văn Học Trong Nước
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="category grid__row">
                    <div class="grid__colunm-3">
                        @await Component.InvokeAsync("SidebarFt")

                    </div>

                    <div class="grid__colunm-9">
                        <div class="category-right">
                            <h3 class="category-right__title">Sách Văn Học Trong Nước</h3>
                            @RenderBody()

                        </div>

                        <div class="category-right__bot">
                            <span class="category-right__bot-title">Trang 1/244</span>
                            <a class="category-right__bot-page category-right__bot-page--active">
                                1</span>
                                <a href="" class="category-right__bot-page">2</a>
                                <a href="" class="category-right__bot-page">3</a>
                                <a href="" class="category-right__bot-page">4</a>
                                <a href="" class="category-right__bot-page">5</a>
                                <a href="" class="category-right__bot-page">6</a>
                                <a href="" class="category-right__bot-page">7</a>
                                <a href="" class="category-right__bot-page">8</a>
                                <a href="" class="category-right__bot-page">></a>
                                <a href="" class="category-right__bot-page">2-16</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>



        @await Component.InvokeAsync("Footer")

    </div>

    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/category.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>