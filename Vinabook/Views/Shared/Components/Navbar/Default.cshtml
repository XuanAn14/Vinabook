@{
}

@model IEnumerable<Vinabook.Models.DanhMuc>

<ul class="listbooks-list listbooks_none">
    @foreach (var item in Model)
    {
        <li class="listbooks-list__item">
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")))
            {
                <a href="/DanhMuc" class="listbooks-list__link">
                    @item.Ten
                    <i class="bi bi-chevron-right"></i>
                </a>
            }
            else
            {
                <a href="/Sach" class="listbooks-list__link">
                    @item.Ten
                    <i class="bi bi-chevron-right"></i>
                </a>
            }
            
        </li>
    }
</ul>